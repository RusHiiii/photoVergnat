{% extends 'elements/layout/app/base.html.twig' %}

{% block title %}Photo'Vergnat - A propos{% endblock %}

{% block body %}
    <!-- Breadcrumb Area Start -->
    {{ include('elements/shared/app/breadcrumb.html.twig', { 'title': 'Contact', 'page':'Contact' }) }}

    <!-- Contact Area Start -->
    <div class="contact-area section-padding-80-50">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="contact-info mb-30">
                        <p>DÃ©veloppeur</p>
                        <a href="#">Florent Damiens</a>
                    </div>
                    <div class="contact-info mb-30">
                        <p>Email</p>
                        <a href="mailto:contact[at]photovergnat.fr">contact[at]photovergnat.fr</a>
                    </div>
                    <div class="contact-info mb-30">
                        <p>Localisation</p>
                        <a href="#">Auvergne, France</a>
                    </div>
                </div>
                <div class="col-12 col-lg-9 contact-content">
                    <div class="col-12 col-lg-8 header mb-80">
                        <h2 class="contact-title">Formulaire de contact</h2>
                        <div class="line"></div>
                    </div>

                    <div class="alime-contact-form mt-50">
                        <form method="POST" class="form-horizontal">
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <input type="email" name="email" class="form-control mb-30" placeholder="Email">
                                    <select class="form-control mb-30" name="choice">
                                        <option selected>Information</option>
                                        <option>Erreur</option>
                                        <option>Autre</option>
                                    </select>
                                    <input type="text" name="subject" class="form-control mb-30" placeholder="Sujet">
                                </div>
                                <div class="col-12">
                                    <textarea name="message" class="form-control mb-30" placeholder="Messages"></textarea>
                                </div>
                                <div class="col-12">
                                    <input type="hidden" name="token" value="{{ csrf_token('contact') }}"/>
                                    <button type="submit" class="btn alime-btn btn-2 mt-15">Envoyer</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
