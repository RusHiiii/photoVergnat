{% extends 'elements/layout/app/base.html.twig' %}

{% block title %}Photo'Vergnat - Photo en Auvergne Rhône-Alpes{% endblock %}

{% block body %}
    <!-- Welcome Area Start -->
    <section class="welcome-area">
        <div class="welcome-slides owl-carousel">
            <div class="single-welcome-slide bg-img bg-overlay welcome-photo-first">
                <div class="container h-100">
                    <div class="row h-100 align-items-center">
                        <div class="col-12 col-lg-8 col-xl-6">
                            <div class="welcome-text">
                                <h2 data-animation="bounceInDown" data-delay="900ms">Photo'Vergnat</h2>
                                <p data-animation="bounceInDown" data-delay="500ms">Partez à la découverte de la région Auvergne Rhône-Alpes au travers de ma collection de photo !</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="single-welcome-slide bg-img bg-overlay welcome-photo-second">
                <div class="container h-100">
                    <div class="row h-100 align-items-center">
                        <div class="col-12 col-lg-8 col-xl-6">
                            <div class="welcome-text">
                                <h2 data-animation="bounceInDown" data-delay="900ms">Photo'Vergnat</h2>
                                <p data-animation="bounceInDown" data-delay="500ms">Partez à la découverte de la région Auvergne Rhône-Alpes au travers de ma collection de photo !</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="section-padding-80">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-heading text-center">
                        <h2>Catégorie récente</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                {% for category in categories %}
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="single-post-area wow fadeInUpBig">
                            <a href="#" class="post-thumbnail">
                                <img class="lazy" data-src="{{ ('/images/uploads/' ~ (category | getMainPhotoUrl('Portrait') )) | imagine_filter('thumbnail_category') }}">
                            </a>
                            <div class="tags-category">
                                {% for tag in category.tags %}
                                    <a href="#" class="btn post-catagory">{{ tag.title }}</a>
                                {% endfor %}
                            </div>
                            <div class="post-content">
                                <div class="post-meta">
                                    <a href="#">{{ category.created | localizeddate('none', 'none', null, null, 'MMMM Y') | capitalize }}</a>
                                    <a href="#">{{ category.photos | length }} photos</a>
                                </div>
                                <a href="#" class="post-title">{{ category.title }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <div class="alime-portfolio-area clearfix">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-heading text-center">
                        <h2>Dernière photo</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <!-- Projects Menu -->
                    <div class="alime-projects-menu">
                        <div class="portfolio-menu text-center">
                            <button class="btn active" data-filter="*">Toutes</button>
                            {% for className in photos | getAllClassName() %}
                                <button class="btn" data-filter=".{{ className }}">{{ className }}</button>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row alime-portfolio">
                {% for photo in photos | shuffle() %}
                    <div class="col-12 col-sm-6 col-lg-3 single_gallery_item {{ photo | getClassName() | join(' ') }} mb-30 wow fadeInUp" data-wow-delay="300ms">
                        <div class="single-portfolio-content">
                            <img class="img-thumb" src="{{ ('/images/uploads/' ~ photo.file) | imagine_filter('thumbnail') }}">
                            <div class="hover-content">
                                <a data-title="{{ photo.information }}" href="{{ ('/images/uploads/' ~ photo.file) | imagine_filter('big') }}" class="portfolio-img">+</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        $('.lazy').Lazy();
    </script>
{% endblock %}
