<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Edition d'une saison</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <form method="POST" id="update-season">
            <div class="modal-body">
                <div class="alert alert-danger" role="alert" id="alert-update"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Identifiant</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="{{ season.id }}" readonly name="id">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Titre</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" data-validation="length" name="title" data-validation-length="min3" value="{{ season.title }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Création</label>
                    <div class="col-sm-10">
                        <input type="datetime-local" class="form-control" name="created" value="{{ season.created | date('Y-m-d\\TH:i') }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Mise à jour</label>
                    <div class="col-sm-10">
                        <input type="datetime-local" class="form-control" value="{{ season.updated | date('Y-m-d\\TH:i') }}" readonly>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal">Fermer</button>
                <button type="submit" class="btn btn-primary waves-effect waves-light update-season">Valider</button>
            </div>
        </form>
    </div>
</div>
{% block javascripts %}
    <script type="text/javascript">
        $.validate({
            lang: 'fr',
            borderColorOnError : '#ff001c',
            scrollToTopOnError: false
        });
    </script>
{% endblock %}