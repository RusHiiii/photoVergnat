<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Edition d'un utilisateur</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <form method="POST" id="update-user">
            <div class="modal-body">
                <div class="alert alert-danger" role="alert" id="alert-update"></div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Identifiant</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="{{ user.id }}" readonly name="id">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Nom</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" data-validation="length" name="lastname" data-validation-length="min3" value="{{ user.lastname }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Prénom</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" data-validation="length" name="firstname" data-validation-length="min3" value="{{ user.firstname }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" data-validation="email" name="email" value="{{ user.email }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Création</label>
                    <div class="col-sm-10">
                        <input type="datetime-local" class="form-control" name="created" value="{{ user.created | date('Y-m-d\\TH:i') }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Mise à jour</label>
                    <div class="col-sm-10">
                        <input type="datetime-local" class="form-control" value="{{ user.updated | date('Y-m-d\\TH:i') }}" readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Roles</label>
                    <div class="col-sm-10">
                        <select class="roles col-sm-12" multiple="multiple" name="roles">
                            <option value="ROLE_USER" {{ (user | hasRole('ROLE_USER')) ? 'selected' }}>USER</option>
                            <option value="ROLE_AUTHOR" {{ (user | hasRole('ROLE_AUTHOR')) ? 'selected' }}>AUTHOR</option>
                            <option value="ROLE_ADMIN" {{ (user | hasRole('ROLE_ADMIN')) ? 'selected' }}>ADMIN</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect " data-dismiss="modal">Fermer</button>
                <button type="submit" class="btn btn-primary waves-effect waves-light update-user">Valider</button>
            </div>
        </form>
    </div>
</div>
{% block javascripts %}
    <script type="text/javascript">
        $(".roles").select2();
        $.validate({
            lang: 'fr',
            borderColorOnError : '#ff001c',
            scrollToTopOnError: false
        });
    </script>
{% endblock %}